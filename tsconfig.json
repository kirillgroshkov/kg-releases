{
  "extends": "@naturalcycles/js-lib/cfg/frontend/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "skipLibCheck": true, // vuetify
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "outDir": "dist/tsc",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
